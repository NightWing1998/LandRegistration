    <link rel="stylesheet" href="stylesheets/form.css">
    <div class="page-content" style="margin-top:25px;">
        
        <div class="container">
            
                <form role = "form" action="/form/verify" method="POST" enctype="multipart/form-data">
                    <div class = "mdl-grid">
                        
                        <div class = "mdl-cell mdl-cell--4-col"></div>
                        <div class = "mdl-cell mdl-cell--4-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input type="text" class="mdl-textfield__input" id="reg[user]" name="reg[user]" required>
                            <label class="mdl-textfield__label" for="reg[user]">PIN</label>
                        </div>
                        <div class = "mdl-cell mdl-cell--4-col"></div>
                        
                        <div class = "mdl-cell mdl-cell--4-col">
                            <center>Buyer</center>
                            <hr>
                        </div>
                        
                        <div class = "mdl-cell mdl-cell--4-col">
                            <center>Seller</center>
                            <hr>
                        </div>
                        
                        <div class = "mdl-cell mdl-cell--4-col">
                            <center>Witness</center>
                            <hr>
                        </div>
                        
                        <div class = "mdl-cell mdl-cell--4-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input type="text" class="mdl-textfield__input" id="reg[buyer]" name="reg[buyer]">
                            <label class="mdl-textfield__label" for="reg[buyer]">Aadhar No.</label>
                        </div>
                        
                         <div class = "mdl-cell mdl-cell--4-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input type="text" class="mdl-textfield__input"  id="reg[seller]" name="reg[seller]">
                            <label class="mdl-textfield__label" for="reg[seller]">Aadhar No.</label>
                        </div>
                        
                         <div class = "mdl-cell mdl-cell---col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input type="text" class="mdl-textfield__input" id="reg[witness]" name="reg[witness]">
                            <label class="mdl-textfield__label" for="reg[witness]">Aadhar No.</label>
                        </div>
                        
                        <div class = "mdl-cell mdl-cell--4-col">
                            <!--<span class="mdl-chip mdl-chip--contact">-->
                            <!--<span class="mdl-chip__contact mdl-color--teal mdl-color-text--white">A</span>-->
                            <input type="file" class="data mdl-chip__text" id="regDataSet0" name="regDataSet0" accept=".jpg , .png">
