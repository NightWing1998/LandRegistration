<% include ./partials/header.ejs %>

    <div class="page-content" style="margin-top:25px;">
        
        <div class="container">
            
                <form role = "form" action="/form/verify" method="POST" enctype="multipart/form-data">
                    <div class = "mdl-grid jumbotron">
                        <div class = "mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input type="text" class="mdl-textfield__input" id="reg[buyer]" name="reg[buyer]">
                            <label class="mdl-textfield__label" for="reg[buyer]">Buyer Aadhar No.</label>
                        </div>
                        <div class = "mdl-cell mdl-cell--6-col">
                            <span class="mdl-chip mdl-chip--contact">
                            <span class="mdl-chip__contact mdl-color--teal mdl-color-text--white">B</span>
                                <input type="file" class="data mdl-chip__text" id="regDataSet0" name="regDataSet0" accept=".jpg , .png">
                            </span>
                            
                        </div>
                            
                        <div class = "mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input type="text" class="mdl-textfield__input"  id="reg[seller]" name="reg[seller]">
                            <label class="mdl-textfield__label" for="reg[seller]">Seller Aadhar No.</label>
                        </div>
                        <div class = "mdl-cell mdl-cell--6-col">
                            <span class="mdl-chip mdl-chip--contact">
                            <span class="mdl-chip__contact mdl-color--teal mdl-color-text--white">S</span>
                            <input type="file" class="data mdl-chip__text" id="regDataSet1" name="regDataSet1" accept=".jpg,.png">
                            </span>
                        </div>
                            
                        <div class = "mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input type="text" class="mdl-textfield__input" id="reg[witness]" name="reg[witness]">
                            <label class="mdl-textfield__label" for="reg[witness]">Witness Aadhar No.</label>
                        </div>
                        <div class = "mdl-cell mdl-cell--6-col">
                             <span class="mdl-chip mdl-chip--contact">
                            <span class="mdl-chip__contact mdl-color--teal mdl-color-text--white">W</span>
                            <input type="file" class="data mdl-chip__text" id="regDataSet2" name="regDataSet2" accept=".jpg,.png">
                            </span>
                        </div>
                                       
                        <div class = "mdl-cell mdl-cell--4-col"></div>
                        <div class = "mdl-cell mdl-cell--4-col mdl-cell--8-col-tablet mdl-cell--4-col-phone">
                            <button type="submit" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent mdl-button--raised" disabled>Submit</button>
                        </div>
                        <div class = "mdl-cell mdl-cell--4-col"></div>
                    </div>
                </form>
            
            <script>
                var count=0; 
                var x = document.getElementsByClassName("data");
                for(var i = 0;i<x.length;i++){
                    console.log(i);
                    x[i].onchange = function(){
                        var f = this.value.toString().split(".");
                        var ext = f[f.length - 1];
                        count++;
                        if( (ext === "jpg" || ext === "png") && count === 3){
                                document.querySelector(".mdl-button").disabled = false;
                        }
                    };
                }
            </script>
            
        </div>
        
    </div>

<% include ./partials/footer.ejs %>